@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>@ViewData["Title"]</h1>

<p>Welcome to the Admin Dashboard, @User.Identity.Name!</p>

<!-- Admin'e özel içerikler buraya gelir -->
<div class="admin-section">
    <h2>Admin Panel</h2>
    <p>Here you can manage users, view statistics, and perform other administrative tasks.</p>
    <!-- Örnek olarak, adminlerin kullanıcıları yönetebileceği bir bağlantı ekleyelim -->
    <a href="/Admin/ManageUsers" class="btn btn-primary">Manage Users</a>
    <a href="/Admin/ViewReports" class="btn btn-secondary">View Reports</a>
</div>

<!-- Admin'e özel başka içerikler veya işlevsellikler ekleyebilirsiniz -->
